<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g="urn:import:com.google.gwt.user.client.ui">


    <ui:style src="../../css/App.css"/>

    <g:VerticalPanel width="100%" height="10%" horizontalAlignment="ALIGN_CENTER">

        <g:HTMLPanel ui:field="panel" width="100%"/>

        <g:VerticalPanel ui:field="vertPanel" spacing="10" verticalAlignment="ALIGN_TOP" width="50%">
            <g:HTMLPanel ui:field="htmlPanel" visible="false" width="100%">
                <div>
                    <g:TextBox ui:field="lastName" styleName="{style.input}"/>
                </div>
                <div>
                    <g:TextBox ui:field="firstName" styleName="{style.input}"/>
                </div>
                <div>
                    <g:TextBox ui:field="secondName" styleName="{style.input}"/>
                </div>
                <div>
                    <g:TextBox ui:field="dateBirth" styleName="{style.input}"/>
                </div>
                <div>
                    <g:ListBox ui:field="clubId" styleName="{style.styled-select}"/>
                </div>
            </g:HTMLPanel>
            <g:Button ui:field="editPlayer" text="view player" styleName="{style.button}" width="100%"/>
            <g:Button ui:field="addNewPlayer" text="add player" styleName="{style.button}" width="100%"/>
            <g:Button ui:field="addButton" text="add" visible="false" styleName="{style.button}" width="100%"/>
            <g:Button ui:field="exitButton" text="exit without add" visible="false" styleName="{style.button}"
                      width="100%"/>
            <g:Button ui:field="deleteButton" text="delete" styleName="{style.button}" width="100%"/>
        </g:VerticalPanel>
    </g:VerticalPanel>
</ui:UiBinder>